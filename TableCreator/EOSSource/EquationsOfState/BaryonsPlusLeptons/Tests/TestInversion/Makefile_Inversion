wlInversion = \
  $(WL_LIBRARY) \
  $(WL_EOSSOURCE) \
  $(SHAREDMODULES) \
  $(COMMON_MODS_OBJ)
  
all: wlComposeInversionTest

wlComposeInversionTest: \
	$(wlInversion) wlComposeInversionTest.o
	$(FLINKER) $(FLAGS) -o wlComposeInversionTest_$(MACHINE) \
	$(wlInversion) wlComposeInversionTest.o \
	$(LIBRARIES)

clean:
	rm -f *.o *.mod *.ld

clobber: clean
	rm -f wlComposeInversionTest_$(MACHINE)

