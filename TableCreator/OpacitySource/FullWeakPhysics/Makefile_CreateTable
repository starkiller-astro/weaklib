Weaklib_TableCreator = \
  $(WL_LIBRARY) \
  $(WL_EOSSOURCE) \
  $(WL_OPACITYSOURCE) \
  $(SHAREDMODULES) \
  $(OPACITYFULLWEAK) \
  $(CHIMERA) \
  $(EOS_MODS) \
  $(EOS_OBJ) \
  $(FULL_KINEMATICS)

all: wlCreateOpacityTable wlReadOpacityTableTest

wlCreateOpacityTable: \
	$(Weaklib_TableCreator) wlCreateOpacityTable.o
	$(FLINKER) $(FLAGS) -o wlCreateOpacityTable_$(MACHINE) \
	$(Weaklib_TableCreator) wlCreateOpacityTable.o \
	$(LIBRARIES)

wlReadOpacityTableTest: \
	$(Weaklib_TableCreator) wlReadOpacityTableTest.o
	$(FLINKER) $(FLAGS) -o wlReadOpacityTableTest_$(MACHINE) \
	$(Weaklib_TableCreator) wlReadOpacityTableTest.o \
	$(LIBRARIES)

clean:
	rm -f *.o *.mod *.ld

clobber: clean
	rm wlCreateOpacityTable_$(MACHINE)
	rm wlReadOpacityTableTest_$(MACHINE)
