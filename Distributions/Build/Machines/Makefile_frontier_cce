## Makefile definitions for Frontier with CCE compiler

C       = CC
FORTRAN = ftn
FLINKER = ftn

DEBUG    = -g -O0 -Ktrap=fp
OPTIMIZE = -g -O2

SUFFIX_f90 =

MDEFS =
PP    = -D

ifeq ($(USE_OMP),TRUE)
  OPENMP = -fopenmp
else ifeq ($(USE_OMP_OL),TRUE)
  OPENMP = -fopenmp
endif

ifeq ($(USE_OACC),TRUE)
  OPENACC = -hacc
endif

INCLUDE_HDF5     =
INCLUDE_ROCM     = -I$(ROCM_PATH)/include

LIBRARIES_HDF5     = -lhdf5_fortran -lhdf5
LIBRARIES_ROCM     = -L$(ROCM_PATH)/lib -lamdhip64
