WEAKLIB_DIR ?= $(HOME)/weaklib
include $(WEAKLIB_DIR)/Distributions/Build/Makefile_Build
include $(WEAKLIB_DIR)/Distributions/Build/Makefile_WeakLib_ObjectFiles
include $(WEAKLIB_DIR)/Distributions/Build/Makefile_WeakLib_Dependencies

include $(WEAKLIB_DIR)/TableCreator/OpacitySource/FullWeakPhysics/Makefile_Opacity_FullWeakPhysics_ObjectFiles
include $(WEAKLIB_DIR)/TableCreator/OpacitySource/FullWeakPhysics/Makefile_Opacity_FullWeakPhysics_Dependencies
include $(WEAKLIB_DIR)/TableCreator/OpacitySource/FullWeakPhysics/Chimera/Makefile_ObjectFiles
include $(WEAKLIB_DIR)/TableCreator/OpacitySource/FullWeakPhysics/Chimera/Makefile_Dependencies

VPATH += \
$(WEAKLIB_DIR)/TableCreator/OpacitySource/FullWeakPhysics: \
$(WEAKLIB_DIR)/TableCreator/OpacitySource/FullWeakPhysics/Chimera: \

CUBA_LIB = -L$(CUBA_DIR) -lcuba

.DEFAULT_GOAL := all

all: wlTestGSI \
     wlTestGSI2D \
     wlCompareOpacities \
     wlCompareOpacitiesTable \
     wlTestParallel2DGSI

wlTestGSI: \
	$(weaklib) Opacity_SemiLep_2D_GSI.o Opacity_SemiLep_4D_GSI.o wlTestGSI.o
	$(FLINKER) $(FLAGS) -o wlTestGSI_$(MACHINE) \
	$(weaklib) Opacity_SemiLep_2D_GSI.o Opacity_SemiLep_4D_GSI.o wlTestGSI.o \
	$(LIBRARIES) $(CUBA_LIB)

wlTestGSI2D: \
	$(weaklib) Opacity_SemiLep_2D_GSI.o wlTestGSI2D.o
	$(FLINKER) $(FLAGS) -o wlTestGSI2D_$(MACHINE) \
	$(weaklib) Opacity_SemiLep_2D_GSI.o wlTestGSI2D.o \
	$(LIBRARIES) $(CUBA_LIB)

wlCompareOpacities: \
	$(weaklib) Opacity_SemiLep_2D_GSI.o Opacity_SemiLep_4D_GSI.o wlCompareOpacities.o
	$(FLINKER) $(FLAGS) -o wlCompareOpacities_$(MACHINE) \
	$(weaklib) Opacity_SemiLep_2D_GSI.o Opacity_SemiLep_4D_GSI.o wlCompareOpacities.o \
	$(LIBRARIES) $(CUBA_LIB)

wlCompareOpacitiesTable: \
	$(weaklib) Opacity_SemiLep_2D_GSI.o Opacity_SemiLep_4D_GSI.o cc_weak_mag_weaklib.o wlCompareOpacitiesTable.o
	$(FLINKER) $(FLAGS) -o wlCompareOpacitiesTable_$(MACHINE) \
	$(weaklib) Opacity_SemiLep_2D_GSI.o Opacity_SemiLep_4D_GSI.o cc_weak_mag_weaklib.o wlCompareOpacitiesTable.o \
	$(LIBRARIES) $(CUBA_LIB)

wlTestParallel2DGSI: \
	$(weaklib) wlTestParallel2DGSI.o
	$(FLINKER) $(FLAGS) -o wlTestParallel2DGSI_$(MACHINE) \
	$(weaklib) wlTestParallel2DGSI.o \
	$(LIBRARIES) $(CUBA_LIB)

wlTestParallel4DGSI: \
	$(weaklib) wlTestParallel4DGSI.o
	$(FLINKER) $(FLAGS) -o wlTestParallel4DGSI_$(MACHINE) \
	$(weaklib) wlTestParallel4DGSI.o \
	$(LIBRARIES) $(CUBA_LIB)

clean:
	rm -f *.o *.mod *.ld *.acc.s

clobber: clean
	rm -f *_$(MACHINE)

cc_weak_mag_weaklib.o: \
  wlKindModule.o \
  numerical_module.o \
  physcnst_module.o \
  PRB_CNTL_MODULE.o

wlTestGSI.o: \
	wlKindModule.o \
	wlSemiLeptonicOpacityModule2D.o \
	wlSemiLeptonicOpacityModule4D.o \
	Opacity_SemiLep_2D_GSI.o \
	Opacity_SemiLep_4D_GSI.o

wlTestGSI2D.o: \
	wlKindModule.o \
	wlSemiLeptonicOpacityModule2D.o \
	Opacity_SemiLep_2D_GSI.o

wlCompareOpacities.o: \
	wlKindModule.o \
  wlKindModule.o \
  wlEosConstantsModule.o \
  wlInterpolationModule.o \
  wlEquationOfStateTableModule.o \
  wlIOModuleHDF.o \
  wlEOSIOModuleHDF.o \
  wlLeptonEOSTableModule.o \
  wlMuonEOS.o \
  wlElectronPhotonEOS.o \
  wlHelmMuonIOModuleHDF.o \
	wlOpacityTableModule.o \
	wlOpacityTableIOModuleHDF.o \
	wlOpacityFieldsModule.o

wlCompareOpacitiesTable.o: \
	wlKindModule.o \
  wlKindModule.o \
  wlEosConstantsModule.o \
  wlInterpolationModule.o \
  wlEquationOfStateTableModule.o \
  wlIOModuleHDF.o \
  wlEOSIOModuleHDF.o \
  wlLeptonEOSTableModule.o \
  wlElectronPhotonEOS.o \
  wlHelmMuonIOModuleHDF.o \
	wlOpacityTableModule.o \
	wlOpacityTableIOModuleHDF.o \
	wlOpacityFieldsModule.o

wlTestParallel2DGSI.o: \
	wlKindModule.o \
	wlSemiLeptonicOpacityModule2D.o \
	wlEosConstantsModule.o

wlTestParallel4DGSI.o: \
	wlKindModule.o \
	wlSemiLeptonicOpacityModule4D.o \
	wlEosConstantsModule.o
